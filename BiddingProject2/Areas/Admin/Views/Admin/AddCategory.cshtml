@model BiddingProject2.Models.Category

@{
    ViewBag.Title = "AddCategory";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<h1>Add Category</h1>

<p class="hidden" id="myMessage">@ViewBag.Msg</p>
@using (Html.BeginForm("AddCategory", "Admin", FormMethod.Post))
{
<div class="form-horizontal">
    <div class="col-lg-12 col-md-12">
        <div class="form-group row">
            @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-4 col-lg-4" })
            <div class="col-md-8 col-lg-8">
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-md-offset-2 col-md-10 ml-3">
            <input type="submit" value="Create" class="btn btn-primary" />
        </div>
    </div>
</div>
}

<div class="ml-4">
    @Html.ActionLink("Back to List", "Category")
</div>
